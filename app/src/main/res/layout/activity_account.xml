<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/relative_sheet"
        app:behavior_hideable = "true"
        app:behavior_peekHeight = "0dp"
        android:layout_marginTop="180dp"
        android:layout_height="wrap_content"
        android:background="#ff7f50"
        app:layout_behavior = "com.google.android.material.bottomsheet.BottomSheetBehavior">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/page_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@drawable/background_bottom1"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="40dp"
                    android:gravity="center|bottom"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:layout_marginVertical="5dp"
                        android:textSize="23sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Design Wrong"
                        android:layout_marginVertical="7dp"
                        android:background="@drawable/edittext_rounded_corners_border"
                        android:paddingLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:layout_marginVertical="5dp"
                        android:textSize="23sp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginVertical="7dp"
                        android:hint="Design wrong@.com"
                        android:background="@drawable/edittext_rounded_corners_border"
                        android:paddingLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Password"
                        android:textColor="@color/black"
                        android:layout_marginVertical="5dp"
                        android:textSize="23sp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginVertical="7dp"
                        android:background="@drawable/edittext_rounded_corners_border"
                        android:hint="Password"
                        android:paddingLeft="15dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginVertical="7dp"
                        android:hint="Password"
                        android:background="@drawable/edittext_rounded_corners_border"
                        android:paddingLeft="15dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginVertical="7dp"
                        android:hint="Password"
                        android:background="@drawable/edittext_rounded_corners_border"
                        android:paddingLeft="15dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginVertical="7dp"
                        android:hint="Password"
                        android:background="@drawable/edittext_rounded_corners_border"
                        android:paddingLeft="15dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginVertical="7dp"
                        android:hint="Password"
                        android:background="@drawable/edittext_rounded_corners_border"
                        android:paddingLeft="15dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginVertical="7dp"
                        android:hint="Password"
                        android:background="@drawable/edittext_rounded_corners_border"
                        android:paddingLeft="15dp"/>

                    <Button
                        android:id="@+id/getStarted2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="0dp"
                        android:text="Get Started"
                        android:textAllCaps="false"
                        android:layout_marginTop="10dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/button_gradient"
                        android:textSize="21sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="40dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account?"
                            android:textColor="#5E5D5D"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_login"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#4C4A4A"
                            android:text="Login"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>